def bubble_sort(arr):
    n = len(arr)
    for i in range(n):
        swapped = False
        for j in range(0, n - i - 1):
            if arr[j] > arr[j + 1]:
                arr[j], arr[j + 1] = arr[j + 1], arr[j]
                swapped = True
        if not swapped:
            break
    return arr
random_array = [5, 2, 9, 1, 5, 6]
reverse_sorted_array = [10, 8, 6, 4, 2]
already_sorted_array = [1, 2, 3, 4, 5]
print("Sorting a Random Array:")
print("Input:", random_array)
print("Output:", bubble_sort(random_array))
print("\nSorting a Reverse Sorted Array:")
print("Input:", reverse_sorted_array)
print("Output:", bubble_sort(reverse_sorted_array))
print("\nSorting an Already Sorted Array:")
print("Input:", already_sorted_array)
print("Output:", bubble_sort(already_sorted_array))
